# I2C buses

P9_19	i2c	# I2C2 SCL
P9_20	i2c	# I2C2 SDA

# PWM outputs

P8_13	pwm	# EHRPWM2B
P8_19	pwm	# EHRPWM2A
P9_14	pwm	# EHRPWM1A
P9_16	pwm	# EHRPWM1B

# Serial ports

P8_37	uart	# TXD5
P8_38	uart	# RXD5
P9_11	uart	# RXD4
P9_13	uart	# TXD4
P9_21	uart	# TXD2
P9_22	uart	# RXD2
P9_24	uart	# TXD1
P9_26	uart	# RXD1

# SPI buses

P9_28	spi	# SPI1 SS0
P9_29	spi	# SPI1 MISO
P9_30	spi	# SPI1 MOSI
P9_31	spi	# SPI1 SCLK
P9_42	spi	# SPI1 SS1
